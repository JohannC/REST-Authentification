<form class="form-horizontal" id="modify-firstName-form" class="modify-firstName-form" method="post" data-remote="true" action="/modify-firstname">
    <input type="hidden" name="_csrf" value="<%=csrfToken%>">
    <td class="">
        First name
    </td>
    <td class="text-center col-lg-5 col-md-5 col-xs-5 col-sm-5">
        <div ng-show="!modifyFirstName"><%= user.extras.firstName %></div>
    	<div ng-show="modifyFirstName" class="form-group {{inputs.firstName.cssClass}}">
			<div class="input-group">
				<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
				<input class="form-control" type="text" name="first_name" ng-model="firstName" ng-init="firstName='<%= user.extras.firstName %>'" value="" placeholder="" ng-change="validateData('firstName')" />
			</div>
			<span class="glyphicon glyphicon-remove form-control-feedback ng-cloak" ng-show="inputs.firstName.hasError"></span>
			<span class="glyphicon glyphicon-ok form-control-feedback ng-cloak" ng-show="inputs.firstName.isValid"></span>
			<p class="help-block ng-cloak" ng-show="inputs.firstName.hasError">{{inputs.firstName.errorMsg}}</p>
    	</div>
    </td>
    <td class="text-right col-lg-4 col-md-4 col-xs-4 col-sm-4">
        <button type="button" class="btn btn-action" ng-show="!modifyFirstName" ng-click="enableModifyFirstName()">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Modify
        </button>
        <button type="submit" class="btn btn-action" ng-model="submit" ng-show="modifyFirstName" ng-cloak>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>Update
        </button>
        <button type="button" class="btn btn-danger" ng-show="modifyFirstName" ng-click="disableModifyFirstName()" ng-cloak>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>Cancel
        </button>
    </td>
</form>