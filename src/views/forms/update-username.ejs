<form class="form-horizontal" id="modify-username-form" class="modify-username-form" method="post" data-remote="true" action="/modify-username">
    <input type="hidden" name="_csrf" value="<%=csrfToken%>">
    <td class="">
        Username
    </td>
    <td class="text-center col-lg-5 col-md-5 col-xs-5 col-sm-5">
        <div ng-show="!modifyUsername"><%= user.username %></div>
    	<div ng-show="modifyUsername" class="form-group {{inputs.username.cssClass}}">
			<div class="input-group">
				<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
				<input class="form-control" type="text" name="username" ng-model="username" ng-init="username='<%=user.username %>'" ng-change="validateData('username')" value="" placeholder="" />
			</div>
			<span class="glyphicon glyphicon-remove form-control-feedback ng-cloak" ng-show="inputs.username.hasError"></span>
			<span class="glyphicon glyphicon-ok form-control-feedback ng-cloak" ng-show="inputs.username.isValid"></span>
    	    <p class="help-block ng-cloak" ng-show="inputs.username.hasError">{{inputs.username.errorMsg}}</p>
    	</div>
    </td>
    <td class="text-right col-lg-4 col-md-4 col-xs-4 col-sm-4">
        <button type="button" class="btn btn-action" ng-show="!modifyUsername" ng-click="enableModifyUsername()">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Modify
        </button>
        <button type="submit" class="btn btn-action" ng-model="submit" ng-show="modifyUsername" ng-cloak>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>Update
        </button>
        <button type="button" class="btn btn-danger" ng-show="modifyUsername" ng-click="disableModifyUsername()" ng-cloak>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>Cancel
        </button>
    </td>
</form>