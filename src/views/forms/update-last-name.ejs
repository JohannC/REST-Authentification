<form class="form-horizontal" id="modify-lastName-form" class="modify-lastName-form" method="post" data-remote="true" action="/modify-lastname">
    <input type="hidden" name="_csrf" value="<%=csrfToken%>">
    <td class="">
        Last name
    </td>
    <td class="text-center col-lg-5 col-md-5 col-xs-5 col-sm-5">
        <div ng-show="!modifyLastName"><%= user.extras.lastName %></div>
    	<div ng-show="modifyLastName" class="form-group {{inputs.lastName.cssClass}}">
			<div class="input-group">
				<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
				<input class="form-control" type="text" name="last_name" ng-model="lastName" ng-init="lastName='<%= user.extras.lastName %>'" value="" placeholder="" ng-change="validateData('lastName')" />
			</div>
			<span class="glyphicon glyphicon-remove form-control-feedback ng-cloak" ng-show="inputs.lastName.hasError"></span>
			<span class="glyphicon glyphicon-ok form-control-feedback ng-cloak" ng-show="inputs.lastName.isValid"></span>
			<p class="help-block ng-cloak" ng-show="inputs.lastName.hasError">{{inputs.lastName.errorMsg}}</p>
    	</div>
    </td>
    <td class="text-right col-lg-4 col-md-4 col-xs-4 col-sm-4">
        <button type="button" class="btn btn-action" ng-show="!modifyLastName" ng-click="enableModifyLastName()">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Modify
        </button>
        <button type="submit" class="btn btn-action" ng-model="submit" ng-show="modifyLastName" ng-cloak>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>Update
        </button>
        <button type="button" class="btn btn-danger" ng-show="modifyLastName" ng-click="disableModifyLastName()" ng-cloak>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>Cancel
        </button>
    </td>
</form>