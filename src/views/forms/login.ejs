<form id="login_form" class="login_form" method="post" data-remote="true" action="/login">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class="form-group">
        <label>Email or Username</label>
        <input name="username" placeholder="Email or Username" class="form-control" type="text">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input name="password" placeholder="Password" class="form-control" type="password">
        <p class="help-block"><a href="" data-dismiss="modal" data-toggle="modal" data-target="#forgot-password-modal">Forgot password?</a>
        </p>
    </div>
    <div class="checkbox">
        <label class="remember-me">
            <input name="remember" value="true" type="checkbox"> Remember me
        </label>
    </div>
    <input name="submit" value="Sign in" class="btn btn-action btn-block" type="submit">
</form>